<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="@color/color_win_back">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/winner"/>

    <TextView
        android:id="@+id/current_score"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="16dp"
        android:textSize="@dimen/text_size_primary_large"
        android:textStyle="bold"
        android:text="Score : 1200"
        android:gravity="center"
        android:textColor="@android:color/holo_red_dark"/>

        <TextView
            android:id="@+id/next_score"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_terciary"
            android:text="(next level 1500)"
            android:gravity="center"/>

    <Button
        android:enabled="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Share"
        android:id="@+id/share_score" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Play Again"
        android:id="@+id/play_again" />

</LinearLayout>